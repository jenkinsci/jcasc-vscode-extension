{
  "name": "jcasc-plugin",
  "displayName": "JCasC-Plugin",
  "description": "This extension is used to integrate a live jenkins instance configuration with your editor. It can be used to edit and validate YAML files.",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/jenkinsci/jcasc-vscode-extension"
  },
  "icon": "https://raw.githubusercontent.com/jenkinsci/jcasc-vscode-extension/master/icon/jcasc_icon.png",
  "engines": {
    "vscode": "^1.38.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.jcasc"
  ],
  "license": "MIT",
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Jenkins: Configuration as Code",
      "properties": {
        "jcasc.schemaURL": {
          "type": "string",
          "description": "URL for the configuration-as-code Schema for the Jenkins instance"
        },
        "jcasc.userName": {
          "type": "string",
          "description": "Username for authenticating the user"
        },
        "jcasc.userToken": {
          "type": "string",
          "description": "Token for authenticating the user"
        }
      }
    },
    "commands": [
      {
        "command": "extension.jcasc",
        "title": "Jenkins: Fetch configuration-as-code schema"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.12.21",
    "@types/vscode": "^1.38.0",
    "@typescript-eslint/eslint-plugin": "^2.5.0",
    "@typescript-eslint/parser": "^2.5.0",
    "eslint": "^6.6.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-prettier": "^3.1.1",
    "glob": "^7.1.4",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "mocha": "^6.1.4",
    "prettier": "^1.19.1",
    "typescript": "^3.3.1",
    "vscode-test": "^1.2.0"
  },
  "dependencies": {
    "request": "^2.88.0",
    "request-promise": "^4.2.4"
  },
  "publisher": "jcasc-developers"
}
